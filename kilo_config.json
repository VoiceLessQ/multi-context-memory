{
  "mcpServers": {
    "mcm-mcpglobal": {
      "command": "docker",
      "args": [
        "exec",
        "-i",
        "mcp-memory-system",
        "python",
        "-m",
        "src.mcp_stdio_server"
      ],
      "env": {
        "ENVIRONMENT": "production",
        "DATABASE_URL": "sqlite:///./data/memory.db",
        "JSONL_STORAGE_PATH": "./data/jsonl",
        "API_HOST": "0.0.0.0",
        "API_PORT": "8000"
      }
    }
  },
  "mcpClients": {
    "mcm-mcpglobal": {
      "server": "mcm-mcpglobal",
      "capabilities": {
        "resources": [
          "memory://*",
          "context://*",
          "relation://*"
        ],
        "tools": [
          "create_memory",
          "search_memories",
          "create_context",
          "create_relation",
          "get_memory_relations",
          "search_semantic",
          "analyze_knowledge_graph",
          "summarize_memory",
          "update_memory",
          "delete_memory",
          "get_memory_statistics",
          "bulk_create_memories",
          "categorize_memories",
          "analyze_content"
        ]
      }
    }
  },
  "settings": {
    "mcm-mcpglobal": {
      "autoConnect": true,
      "defaultContext": "general",
      "maxResults": 10,
      "enableSemanticSearch": false,
      "defaultTags": ["kilo", "memory-system"],
      "logLevel": "INFO",
      "containerName": "mcp-memory-system"
    }
  }
}