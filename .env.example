# MCP Multi-Context Memory System Configuration

# Database Configuration
DATABASE_URL=sqlite:///./memory.db
JSONL_STORAGE_PATH=./data/jsonl

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your-secret-key-here
API_ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# VS Code Extension Configuration
EXTENSION_HOST=localhost
EXTENSION_PORT=3000
EXTENSION_SECRET_KEY=your-extension-secret-key

# AI Configuration
TRANSFORMERS_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
MAX_TOKENS=512
TEMPERATURE=0.7
TOP_P=0.9
TOP_K=50
REpetition_PENALTY=1.1

# Memory Configuration
MAX_KNOWLEDGE_ENTITIES=10000
MAX_CONTEXTS=100
MAX_RELATIONS_PER_ENTITY=50
SUMMARIZATION_INTERVAL=3600  # seconds
RELATION_DISCOVERY_INTERVAL=7200  # seconds
KNOWLEDGE_RETENTION_DAYS=365

# Search Configuration
SEARCH_RESULTS_LIMIT=20
SEARCH_SIMILARITY_THRESHOLD=0.7
SEARCH_EMBEDDING_CACHE_SIZE=1000

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_CONNECTION_TIMEOUT=300

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/memory_system.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Security Configuration
BCRYPT_ROUNDS=12
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_HEADERS=["*"]
CORS_CREDENTIALS=true

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# Cache Configuration
CACHE_TYPE=SimpleCache
CACHE_DEFAULT_TIMEOUT=300  # seconds
CACHE_KEY_PREFIX=mcp_memory_

# Vector Database Configuration (Optional)
VECTOR_DB_ENABLED=false
VECTOR_DB_TYPE=chroma
VECTOR_DB_PATH=./vectors
VECTOR_DB_COLLECTION_NAME=mcp_memory

# Search Index Configuration
SEARCH_INDEX_ENABLED=true
SEARCH_INDEX_PATH=./whoosh_index
SEARCH_INDEX_SCHEMA=default

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_PATH=./backups
BACKUP_INTERVAL=86400  # seconds (24 hours)
BACKUP_RETENTION_DAYS=30

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Development Configuration
DEBUG=false
TESTING=false
RELOAD=false

# Production Configuration
PRODUCTION=false
WORKERS=1
WORKER_CLASS=uvicorn.workers.UvicornWorker
GRACEFUL_SHUTDOWN_TIMEOUT=30

# Testing Configuration
TEST_DATABASE_URL=sqlite:///./test_memory.db
TEST_JSONL_STORAGE_PATH=./test_data/jsonl
TEST_LOG_LEVEL=DEBUG

# Documentation Configuration
DOCS_ENABLED=true
DOCS_HOST=0.0.0.0
DOCS_PORT=8001
DOCS_TITLE=MCP Multi-Context Memory System API
DOCS_DESCRIPTION=API documentation for the enhanced MCP Multi-Context Memory System
DOCS_VERSION=2.0.0
DOCS_CONTACT_NAME=Your Name
DOCS_CONTACT_URL=https://github.com/yourusername/mcp-multi-context-memory
DOCS_CONTACT_EMAIL=your.email@example.com

# Extension Configuration
EXTENSION_ENABLED=true
EXTENSION_DEBUG=false
EXTENSION_LOG_LEVEL=INFO
EXTENSION_AUTO_RELOAD=false

# Migration Configuration
MIGRATION_ENABLED=true
MIGRATION_AUTO_MIGRATE=false
MIGRATION_BACKUP_BEFORE_MIGRATE=true
MIGRATION_VALIDATE_AFTER_MIGRATE=true

# Performance Configuration
PERFORMANCE_ENABLED=true
PERFORMANCE_LOG_INTERVAL=3600  # seconds
PERFORMANCE_METRICS=["response_time", "memory_usage", "cpu_usage", "db_queries"]

# Security Configuration
SECURITY_ENABLED=true
SECURITY_VALIDATE_TOKENS=true
SECURITY_RATE_LIMIT=true
SECURITY_CORS=true
SECURITY_SSL=false
SECURITY_SSL_CERT_FILE=
