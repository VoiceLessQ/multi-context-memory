# ==============================================================================
# MCP Multi-Context Memory System - Minimal Configuration
# ==============================================================================
# This file contains only the ESSENTIAL settings needed to run the system.
# For advanced configuration options, see .env.example.full
# ==============================================================================

# ------------------------------------------------------------------------------
# DATABASE CONFIGURATION (Required)
# ------------------------------------------------------------------------------
DATABASE_URL=sqlite:///./data/sqlite/memory.db
JSONL_DATA_PATH=./data/jsonl/

# ------------------------------------------------------------------------------
# API CONFIGURATION (Required)
# ------------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8002

# ------------------------------------------------------------------------------
# SECURITY CONFIGURATION (CRITICAL - MUST CHANGE BEFORE PRODUCTION)
# ------------------------------------------------------------------------------
# Generate strong secrets with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-MIN-32-CHARS
API_SECRET_KEY=CHANGE-THIS-TO-ANOTHER-SECURE-RANDOM-STRING
ALGORITHM=HS256

# ------------------------------------------------------------------------------
# HIGH-PERFORMANCE FEATURES (Recommended)
# ------------------------------------------------------------------------------
# Vector Search with ChromaDB (10-100x speedup)
CHROMA_ENABLED=true
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=knowledge_base
VECTOR_SEARCH_ENABLED=true

# Redis Caching (80-90% load reduction)
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_CACHE_TTL=3600
REDIS_MAX_CONNECTIONS=10

# ------------------------------------------------------------------------------
# EMBEDDING CONFIGURATION (Choose one)
# ------------------------------------------------------------------------------
# Option 1: Local embeddings (FREE, fast, works offline) - RECOMMENDED
EMBEDDING_PROVIDER=local
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Option 2: OpenAI embeddings (More accurate, requires API key)
# EMBEDDING_PROVIDER=openai
# OPENAI_API_KEY=sk-your-api-key-here
# OPENAI_EMBEDDING_MODEL=text-embedding-3-small
# EMBEDDING_DIMENSION=1536

# ------------------------------------------------------------------------------
# LOGGING (Optional)
# ------------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=logs/memory_system.log

# ------------------------------------------------------------------------------
# DEVELOPMENT MODE (Optional)
# ------------------------------------------------------------------------------
DEBUG=false
TESTING=false

# ==============================================================================
# QUICK START CHECKLIST
# ==============================================================================
# [ ] Generate secure JWT_SECRET_KEY and API_SECRET_KEY
# [ ] Start Redis: docker run -d -p 6379:6379 redis:7-alpine
# [ ] Choose embedding provider (local recommended for beginners)
# [ ] Run: uvicorn src.api.main:app --host 0.0.0.0 --port 8002
# ==============================================================================
